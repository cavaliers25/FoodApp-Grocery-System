            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Snacks"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_hygiene"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Hygiene"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
